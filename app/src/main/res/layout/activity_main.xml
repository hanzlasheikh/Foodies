<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawable_layout"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/app_bar_layout">
        </include>


        <ImageView
            android:id="@+id/cart_image"
            android:src="@drawable/whitecarticon"
            android:layout_width="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="305dp"
            android:layout_height="27dp"/>
    </RelativeLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_marginTop="55dp"
      android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    <com.smarteist.autoimageslider.SliderLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/imageSlider"/>



<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:id="@+id/horzntal"
    android:layout_marginTop="280dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="150dp"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_height="160dp">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="120dp"

        android:src="@drawable/food1"
        android:layout_height="120dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="Parahtha Roll">

    </TextView>



</LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_height="160dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="120dp"

        android:src="@drawable/food2"
        android:layout_height="120dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Chicken pieces">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_height="160dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="120dp"
        android:src="@drawable/food3"
        android:layout_height="120dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Burger's">

        </TextView>


    </LinearLayout>


</LinearLayout>



</HorizontalScrollView>






<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:id="@+id/linear1"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/horzntal">
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="165dp"
            android:src="@drawable/res1"
            android:scaleType="fitXY"
            android:id="@+id/mens_shisrt"
            android:layout_marginLeft="10dp">
        </ImageView>

        <TextView
            android:layout_width="160dp"
            android:layout_height="20dp"
        android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:background="#000"
            android:textColor="#d4af37"
            android:text="Restaurant 1">

        </TextView>


    </LinearLayout>



        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

    <ImageView
        android:id="@+id/tourser"
        android:layout_width="160dp"
        android:layout_height="165dp"
android:src="@drawable/res2"
        android:scaleType="fitXY">
    </ImageView>

            <TextView
                android:layout_width="160dp"
                android:layout_height="20dp"
               android:textAlignment="center"
                android:textStyle="bold"
                android:background="#000"
                android:textColor="#d4af37"
                android:text="Restaurant 2">

            </TextView>

        </LinearLayout>

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:id="@+id/linear2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linear1">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/shoess"
                    android:layout_width="160dp"
                    android:layout_height="165dp"
                    android:src="@drawable/res3"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp">
                </ImageView>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:background="#000"
                    android:textColor="#d4af37"
                    android:text="Restaurant 3">

                </TextView>


            </LinearLayout>



            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/restaurant4"
                    android:layout_width="160dp"
                    android:layout_height="165dp"
                    android:src="@drawable/res4"
                    android:scaleType="fitXY">
                </ImageView>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="#000"
                    android:textColor="#d4af37"
                    android:text="Restaurant 4">

                </TextView>

            </LinearLayout>

        </LinearLayout>






    </RelativeLayout>
</ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginBottom="3dp"
        app:menu="@menu/navigation_menu">

    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>