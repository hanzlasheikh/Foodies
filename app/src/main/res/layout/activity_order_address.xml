<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context=".OrderAddressActivity">


    <include
        android:id="@+id/appbar_layout"
        layout="@layout/app_bar_layout">
    </include>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue Shopping"
        android:textSize="20sp"
        android:padding="14dp"
        android:textColor="@color/colorAccent"/>


    <EditText
        android:id="@+id/code_of_product"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:layout_marginTop="100dp"
        android:hint="Enter Code Of product"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#ffffff"/>

    <EditText
        android:id="@+id/name_order_user"
        android:layout_below="@+id/code_of_product"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Your name"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#ffffff"/>

    <EditText
        android:id="@+id/phone_nu_order_user"
        android:layout_below="@+id/name_order_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:hint="Enter Your Cell number"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#ffffff"/>


    <EditText
        android:id="@+id/address_order_user"
        android:layout_below="@+id/phone_nu_order_user"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
       android:hint="Address"
        android:paddingLeft="10dp"
        android:paddingBottom="60dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#ffffff"/>

    <Button
        android:id="@+id/order_placed"
        android:layout_below="@+id/address_order_user"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Order"
        android:background="@drawable/cornered_button"

        android:backgroundTint="#ffffff"/>

</RelativeLayout>